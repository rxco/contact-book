<ul id="slide-out" class="sidenav sidenav-fixed sidenav-right">
  <li><div class="user-view">
    <div class="background">
        <%= image_tag "profile_bkg.jpg" %>
    </div>
    <a href="#user"><i class="fas fa-user-circle fa-4x white-text"></i></a>
    <a href="#name"><span class="white-text darken-4 name"><b><%= current_user.name %><b></span></a>
    <a href="#email"><span class="white-text darken-4 email"><b><%= current_user.email %><b></span></a>
  </div></li>
  <li><%= link_to explore_path, class: "waves-effect" do %><i class="material-icons">contacts</i>Contacts<% end %></li>
  <li><div class="divider"></div></li>
