  <li><%= link_to edit_user_registration_path, class: "waves-effect" do %><i class="material-icons">account_circle</i>Profile<% end %></li>
  <% unless current_user.authy_enabled %>
    <li><%= link_to user_enable_authy_path, class: "waves-effect", data: {turbolinks:"false"} do %><i class="material-icons">security</i>Enable 2FA<% end %></li>
  <% end %>
  <li><div class="divider"></div></li>
  <li><%= link_to destroy_user_session_path, class: "waves-effect", data: {turbolinks:"false"} do %><i class="material-icons">close</i>Close Session<% end %></li>
