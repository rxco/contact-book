<!-- Add Button Structure -->
<div class="fixed-action-btn">
  <a class="btn-floating btn-large red modal-trigger" href="#add_new_contact_modal">
    <i class="large material-icons">add_circle</i>
  </a>
</div>

<!-- Modal Structure -->
<div id="add_new_contact_modal" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>Add New Contact</h4>
    <%= render 'contacts/form', contact: Contact.new %>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green">Cancel</a>
    <a href="#!" class="waves-effect waves-green btn-flat contact-form-submit">Create</a>
  </div>
</div>

